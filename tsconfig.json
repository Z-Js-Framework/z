{
  "compilerOptions": {
    "jsx": "react-jsx", // Use automatic JSX if supported by your bundler
    "jsxImportSource": "./src/jsxFactory.ts", // Or path to your JSX factory
    "types": [], // Skip importing React types at runtime
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "Preserve",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}